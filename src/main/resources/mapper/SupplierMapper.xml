<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.MaterialMapper">
    <resultMap id="BaseResultMap" type="com.java.myspringbootdemo02.Common.po.SupplierPo">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="supplier_num" property="supplierNum" jdbcType="VARCHAR"/>
        <result column="company_name" property="companyName" jdbcType="VARCHAR"/>
        <result column="contact_name" property="contactName" jdbcType="VARCHAR"/>
        <result column="phone" property="phone" jdbcType="VARCHAR"/>
        <result column="wechat_num" property="wechatNum" jdbcType="VARCHAR"/>
        <result column="state" property="state" jdbcType="INTEGER"/>
        <result column="description" property="description" jdbcType="VARCHAR"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="BaseTable">
        supplier_management
    </sql>

    <insert id="save" parameterType="com.example.entity.SupplierManagement">
        INSERT INTO
        <include refid="BaseTable"/>
        (supplier_num, company_name, contact_name, phone, wechat_num, state, `description`)
        VALUES (#{supplierNum}, #{companyName}, #{contactName}, #{phone}, #{wechatNum}, #{state}, #{description})
    </insert>

    <update id="update" parameterType="com.example.entity.SupplierManagement">
        UPDATE
        <include refid="BaseTable"/>
        <set>
            <if test="supplierNum != null">supplier_num = #{supplierNum},</if>
            <if test="companyName != null">company_name = #{companyName},</if>
            <if test="contactName != null">contact_name = #{contactName},</if>
            <if test="phone != null">phone = #{phone},</if>
            <if test="wechatNum != null">wechat_num = #{wechatNum},</if>
            <if test="state != null">state = #{state},</if>
            <if test="description != null">`description` = #{description}</if>
        </set>
        WHERE id = #{id}
    </update>

    <insert id="batchSave" parameterType="java.util.List">
        INSERT INTO
        <include refid="BaseTable"/>
        (supplier_num, company_name, contact_name, phone, wechat_num, state, `description`)
        VALUES
        <foreach collection="list" item="item" separator=",">
            (#{item.supplierNum}, #{item.companyName}, #{item.contactName}, #{item.phone}, #{item.wechatNum},
            #{item.state}, #{item.description})
        </foreach>
    </insert>


</mapper>